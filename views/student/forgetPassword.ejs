<%- include('../partials/header') -%>
<style>
	.main-container {
		font-family: "Nunito Sans", sans-serif;
		background-color: rgb(239, 238, 238);
	}
	#sub {
		background-color: rgb(0, 56, 101);
	}
	#sub:hover {
		background-color: rgb(255, 255, 255);
		/* color:  rgb(0, 56, 101); */
		color: rgb(0, 56, 101);
		border: 1.5px solid rgb(0, 56, 101);
	}
	a:link {
		text-decoration: none;
	}

	a:visited {
		text-decoration: none;
	}

	a:hover {
		color: red;
		text-decoration: none;
	}

	a:active {
		text-decoration: none;
	}
</style>
<link rel="stylesheet" href="/stylesheets/style.css" />
<div class="main-container vh-100">
	<div class="container py-5 h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-12 col-md-8 col-lg-6 col-xl-5">
				<div class="card" style="border-radius: 1rem">
					<div class="card-body p-5 text-center">
						<div class="mb-4" style="font-size: xx-large; color: #11467b">Forget Password</div>
						<form action="/student/forgetPassword" method="POST" id="t">
							<div class="form-group mb-4">
								<input type="text" name="enrollment" id="enrollment" placeholder="Enrollment No." class="form-control form-control-lg mt-2" />
							</div>
							<div id="html_element" class="mb-2 d-flex justify-content-center"></div>

							<div class="form-group mt-2 mb-2 text-center">
								<button type="submit" id="sub" class="btn btn-primary btn-lg mt-3" id="sub" value="abc">Send Password</button>
								<div class="text-center mt-2">
									<a class="fs-5" href="/student/login">Login</a>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async="async" defer="defer"></script>
<script type="text/javascript">
	var onloadCallback = function () {
		grecaptcha.render("html_element", { sitekey: "6Ld2GmwoAAAAAPOzh30PbgjdiROXUs4hLgEjcy7c" });
	};
</script>
<%- include('../partials/footer') -%>
<script>
	$(document).ready(function () {
		$("#sub").click(function (e) {
			let captcha = grecaptcha.getResponse();
			if (captcha.length == 0) {
				e.preventDefault();
				alert("captcha invalid");
			} else {
				$("#student_login").submit();
			}
		});
	});
</script>
