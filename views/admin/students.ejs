<%- include('../partials/header') %>
<link rel="stylesheet" href="/stylesheets/style_temp.css" />
<link rel="stylesheet" href="/stylesheets/datatables.css" />
<div class="grid-container">
	<%- include("./adminHeader") %> <%- include("./adminSidebar") %>

	<div class="main-container">
		<div class="row ps-5 pe-5 align-items-center d-flex">
			<div class="col h1">
				Students
			</div>
			<div class="col text-end">
				<button
					style="border-radius: 900px; height: min-content"
					class="btn btn-primary"
					data-bs-toggle="modal"
					data-bs-target="#studentModal"
					><i class="fa-regular fa-square-plus"></i>&nbsp;&nbsp;ADD
					STUDENTS
				</button>
			</div>
		</div>
		<table
			class="uk-table uk-table-hover uk-table-striped text-center"
			id="datatable"
		>
			<thead>
				<th class="text-center">Sr no.</th>
                <th class="text-center">Enrollment no.</th>	
                <th class="text-center">Department</th>
                <th class="text-center">Semester</th>
                <th class="text-center">Email</th>
			</thead>
			<tbody>
				<% for( let index = 0; index < student_data.length; index++ ) { %>
				<tr>
					<td><%= index+1 %></td>
					<td><%= student_data[index].enrollment %></td>
                    <td><%= student_data[index].department_id.name %></td>
                    <td><%= student_data[index].semester %></td>
                    <td><%= student_data[index].email %></td>
                   
				</tr>
				<% } %>
			</tbody>
		</table>
	</div>
</div>
<%- include("./addStudent") %> <%- include('../partials/footer') -%>
<script>
	$(document).ready(() => {
		console.log("hello");
		var myTable;

		myTable = $("#datatable").DataTable({
			pagingType: "simple_numbers",
			language: {
				paginate: {
					previous: "<",
					next: ">",
				},
			},
			columnDefs: [
				// Center align the header content of column 1
				{ className: "dt-head-center", targets: [0, 1] },
			],
		});
	});
</script>
